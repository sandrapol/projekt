@model projekt.ViewModels.ListaklientowtVM

@{
    ViewBag.Title = "ListaKlientow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListaKlientow</h2>

<p>
    @Html.ActionLink("Dodaj", "DodajKlienta")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=> model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wiek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ulica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NrDomu)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.klienci) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wiek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ulica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NrDomu)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IdKlienta }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IdKlienta }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IdKlienta })
        </td>
    </tr>
}

</table>
